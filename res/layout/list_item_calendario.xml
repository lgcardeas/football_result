<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" >
 
  <ImageView
    android:id="@+id/imagen_HomeClub"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerInParent="true"/>
  
  <TextView
    android:id="@+id/homeClub"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below = "@id/imagen_HomeClub"
    android:layout_marginLeft="5dp"
    android:text=""
    android:layout_marginTop="10dp"
    android:textColor="@android:color/white"
    android:textAppearance="?android:attr/textAppearanceSmall" />
  
  
  <TextView
    android:id="@+id/hora"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:textColor="@android:color/white"
    android:textAppearance="?android:attr/textAppearanceLarge"/>
  
  <TextView
    android:id="@+id/vs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/hora"
    android:layout_centerHorizontal="true"
    android:text="@string/vs"
    android:textColor="@android:color/white"
    android:textAppearance="?android:attr/textAppearanceLarge" />
  
  <TextView
    android:id="@+id/fecha"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/vs"
    android:layout_centerHorizontal="true"
    android:textColor="@android:color/white"
    android:textAppearance="?android:attr/textAppearanceLarge"/>
 
  <ImageView
    android:id="@+id/imagen_Visitor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerInParent="true" />
  
  <TextView
    android:id="@+id/visitor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/imagen_Visitor"
    android:layout_alignParentRight="true"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:text=""
    android:textColor="@android:color/white"
    android:textAppearance="?android:attr/textAppearanceSmall"/>
    
</RelativeLayout>